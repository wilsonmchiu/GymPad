<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MondayAdd"
    tools:layout_editor_absoluteY="25dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/mondayAddTopBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sundaytopbar" />

            <EditText
                android:id="@+id/mondayInput5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/idedit"
                android:inputType="number"
                android:paddingLeft="155dp" />

            <EditText
                android:id="@+id/mondayInput1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/nameedit"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="155dp" />

            <EditText
                android:id="@+id/mondayInput2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setsedit"
                android:inputType="number"
                android:paddingLeft="160dp" />


            <EditText
                android:id="@+id/mondayInput3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/repsedit"
                android:inputType="number"
                android:paddingLeft="155dp" />

            <EditText
                android:id="@+id/mondayInput4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/weightedit"
                android:inputType="number"
                android:paddingLeft="155dp" />

            <Button
                android:id="@+id/updateMonBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editbtn" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/mondayAddBotBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lowerbarjusthome" />
    </LinearLayout>


</RelativeLayout>